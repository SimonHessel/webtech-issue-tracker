{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["reflect-metadata"],
    "lib": ["ES2020"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
